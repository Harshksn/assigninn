            {% comment %} <img
                width="40"
                height="40"
                loading="lazy"
                src="{{ 'd.png' |  asset_url }}" alt=""/> {% endcomment %}
            <span id="cart-count">0</span>
        </a>

    </div>
</header>


<style>


@import url('https://fonts.googleapis.com/css2?family=Playwrite+AU+VIC:wght@100..400&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap');

body{
    margin: 0;
    padding: 0;
    font-family: "Source Code Pro", monospace;
    font-size: 18px;
    font-weight: 200;
}


.header-nav{
    display: flex;
    justify-content: space-between;
    margin: 0;
    background-color: white;
    padding: 0 30px 0 30px;
    border-bottom: 0.5px solid rgba(60, 59, 59, 0.871);
}



.left-header{
    font-family: "Playwrite AU VIC", cursive;
    font-size: 20px;
    font-weight: 200px;
    letter-spacing: 1px;
}

.mid-header{
    display: flex;
    align-items: center;
    font-size: 17px;
    font-weight: bold;
}

.mid-header li{
    padding: 10px;
    list-style-type: none;
}

.mid-header li:hover{
    text-decoration: underline;
}

.mid-header a{
    color: rgba(0, 0, 0, 0.935);
    text-decoration: none;
}

.right-header{
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-nav{
    padding: 10px;
    margin-top: 10px;
    border-radius: 10px;
    border: none;
    background-color: rgb(233, 232, 232);
}

</style>